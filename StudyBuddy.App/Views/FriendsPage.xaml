<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="StudyBuddy.App.Views.FriendsPage"
    xmlns:viewmodels="clr-namespace:StudyBuddy.App.ViewModels"
    x:DataType="viewmodels:FriendsViewModel"
    xmlns:fontAwesome="clr-namespace:StudyBuddy.App"
    Title="Freunde" x:Name="page" Style="{StaticResource BaseContentPage}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Freund hinzufügen" Order="Primary" Priority="0" Command="{Binding AddFriendCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="{StaticResource FontAwesomeSolid}"
                                 Glyph="{x:Static fontAwesome:FontAwesomeIcons.Plus}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Frame Padding="5"
                   Margin="4"
                   BackgroundColor="{AppThemeBinding Dark={StaticResource CardBackgroundDark}, Light={StaticResource CardBackground}}"
                   HasShadow="False"
                   BorderColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}"
                   CornerRadius="8"
                   HeightRequest="35">
                <Frame.IsVisible>
                    <OnPlatform x:TypeArguments="x:Boolean"
                                iOS="False"
                                Android="True" />
                </Frame.IsVisible>
                <SearchBar TextColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}"
                           x:Name="searchBar"
                           TextChanged="searchBar_TextChanged"
                           BackgroundColor="{AppThemeBinding Dark={StaticResource CardBackgroundDark}, Light={StaticResource CardBackground}}">
                    <SearchBar.IsVisible>
                        <OnPlatform x:TypeArguments="x:Boolean"
                                    iOS="False"
                                    Android="True" />
                    </SearchBar.IsVisible>
                </SearchBar>

            </Frame>
            <SearchBar TextColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}"
                       x:Name="searchBarIos"
                       TextChanged="searchBar_TextChanged">
                <SearchBar.IsVisible>
                    <OnPlatform x:TypeArguments="x:Boolean"
                                iOS="True"
                                Android="False" />
                </SearchBar.IsVisible>
            </SearchBar>

            <RefreshView
                IsRefreshing="{Binding IsRefreshing}"
                Command="{Binding RefreshCommand}"
                Padding="8">
                <CollectionView ItemsSource="{Binding Friends}"
                                EmptyView="Keine Freunde"
                                ItemsUpdatingScrollMode="KeepItemsInView"
                                >
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:UserViewModel">
                            <Grid x:Name="Item" 
                                      Padding="0,8,0,0" 
                                      BackgroundColor="{AppThemeBinding Dark={StaticResource WindowBackgroundColorDark}, Light={StaticResource WindowBackgroundColor}}">
                                <Frame CornerRadius="10"
                                       HasShadow="False"
                                       BackgroundColor="{AppThemeBinding Dark={StaticResource CardBackgroundDark}, Light={StaticResource CardBackground}}">
                                    <StackLayout Orientation="Horizontal">
                                        <Image HeightRequest="45" WidthRequest="45" Grid.Column="0" Grid.Row="0" Source="{Binding ProfileImage}" />
                                        <StackLayout VerticalOptions="Center">
                                            <Label Padding="10,0,0,0" Style="{StaticResource BaseLabel}" Text="{Binding FullName}" FontAttributes="Bold" />
                                            <Label Padding="10,0,0,0" Style="{StaticResource TagLabel}" Text="{Binding CountOfCommonFriends, StringFormat='{0} gemeinsame Freunde'}" FontSize="Small"/>
                                        </StackLayout>
                                    </StackLayout>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer
                                                Command="{Binding BindingContext.DetailsCommand, Source={x:Reference Name=page}}"
                                                CommandParameter="{Binding Source={x:Reference Item}, Path=BindingContext}"/>
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </Grid>
                            
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
