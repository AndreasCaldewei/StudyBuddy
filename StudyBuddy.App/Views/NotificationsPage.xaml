<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:StudyBuddy.App.ViewModels"
             x:Class="StudyBuddy.App.Views.NotificationsPage"
             x:DataType="viewmodels:NotificationsViewModel"
             x:Name="page"
             xmlns:local="clr-namespace:StudyBuddy.App.Views"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             Title="Benachrichtigungen">
    <xct:TabView TabStripPlacement="Top"
                 TabStripHeight="55"
                 TabIndicatorColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}"
                 TabStripBackgroundColor="{AppThemeBinding Dark={StaticResource WindowBackgroundColorDark}, Light={StaticResource WindowBackgroundColor}}"
                 TabIndicatorPlacement="Bottom"
                 TabIndicatorHeight="5"
                 SelectedIndex="0"
                 TabContentDataTemplate="{DataTemplate local:NotificationsPage}">
        <xct:TabViewItem Text="News" 
                         IsSelected="{Binding NewsIsSelected, Mode=OneWayToSource}" 
                         TextColor="{StaticResource SecondaryFont}" 
                         TextColorSelected="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}">
            <xct:TabViewItem.Content>
                <StackLayout>
                    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                                 Command="{Binding RefreshCommand}"
                                 Padding="8">
                        <CollectionView ItemsSource="{Binding News}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:NewsViewModel">
                                    <ContentView>
                                        <StackLayout>
                                            <BoxView HeightRequest="1"
                                                     Color="Black" />
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="{Binding Owner.Firstname}"></Label>
                                                <Label Text="{Binding Owner.Lastname}"></Label>
                                            </StackLayout>
                                            <StackLayout>
                                                <Label Text="{Binding Created}"></Label>
                                            </StackLayout>
                                            <StackLayout>
                                                <Label Text="{Binding Title}"
                                                       FontAttributes="Bold"></Label>
                                                <Label Text="{Binding Body}"></Label>
                                            </StackLayout>
                                        </StackLayout>
                                    </ContentView>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </RefreshView>
                </StackLayout>
            </xct:TabViewItem.Content>
        </xct:TabViewItem>
        <xct:TabViewItem Text="Anfragen"
                         IsSelected="{Binding RequestsIsSelected, Mode=OneWayToSource}"
                         BadgeText="{Binding Requests.Count}"
                         TextColor="{StaticResource SecondaryFont}" 
                         TextColorSelected="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}"
                         BadgeTextColor="White"
                         BadgeBackgroundColor="Red">
            <xct:TabViewItem.Content>
                <StackLayout>
                    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                                 Command="{Binding RefreshCommand}"
                                 Padding="8">
                        <CollectionView ItemsSource="{Binding Requests}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:RequestViewModel">
                                    <Grid Padding="10"
                                          x:Name="requestItem">
                                        <Frame CornerRadius="10"
                                               HasShadow="True"
                                               BackgroundColor="{AppThemeBinding Dark={StaticResource WindowBackgroundColorDark}, Light={StaticResource WindowBackgroundColor}}">
                                            <StackLayout Orientation="Horizontal">
                                                <Image WidthRequest="45"
                                                       HeightRequest="45">
                                                    <Image.Source>
                                                        <FontImageSource FontFamily="{StaticResource FontAwesomeSolid}"
                                                                         Glyph="{Binding TypeSymbol}"
                                                                         Color="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}" />
                                                    </Image.Source>
                                                </Image>
                                                <StackLayout Padding="10,0,0,0"
                                                             VerticalOptions="Center">
                                                    <Label Text="{Binding Name}"
                                                           FontAttributes="Bold" />
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="0" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <StackLayout Grid.Column="1"
                                                                     Grid.Row="0"
                                                                     HorizontalOptions="FillAndExpand"
                                                                     Orientation="Horizontal">
                                                            <Label Text="Annehmen"
                                                                   FontSize="Small"
                                                                   HorizontalOptions="FillAndExpand">
                                                                <Label.GestureRecognizers>
                                                                    <TapGestureRecognizer Command="{Binding BindingContext.AcceptRequestCommand, Source={x:Reference Name=page}}"
                                                                                          CommandParameter="{Binding Source={x:Reference requestItem}, Path=BindingContext}" />
                                                                </Label.GestureRecognizers>
                                                            </Label>
                                                            <Label Text="Ablehnen"
                                                                   FontSize="Small">
                                                                <Label.GestureRecognizers>
                                                                    <TapGestureRecognizer Command="{Binding BindingContext.DenyRequestCommand, Source={x:Reference Name=page}}"
                                                                                          CommandParameter="{Binding Source={x:Reference requestItem}, Path=BindingContext}" />
                                                                </Label.GestureRecognizers>
                                                            </Label>
                                                        </StackLayout>
                                                    </Grid>
                                                </StackLayout>
                                            </StackLayout>
                                        </Frame>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </RefreshView>
                </StackLayout>
            </xct:TabViewItem.Content>
        </xct:TabViewItem>
    </xct:TabView>
</ContentPage>