<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="StudyBuddy.App.Views.AddFriendPage"
    xmlns:viewmodels="clr-namespace:StudyBuddy.App.ViewModels"
    x:DataType="viewmodels:AddFriendViewModel"
    Title="Freund hinzufügen" x:Name="page"
    Style="{StaticResource BaseContentPage}">
    <ContentPage.Content>
        <StackLayout Padding="0,5,0,5">
            <Frame Padding="5"
                   Margin="4"
                   BackgroundColor="{AppThemeBinding Dark={StaticResource CardBackgroundDark}, Light={StaticResource CardBackground}}"
                   HasShadow="False"
                   BorderColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}"
                   CornerRadius="8"
                   HeightRequest="35">
                <Frame.IsVisible>
                    <OnPlatform x:TypeArguments="x:Boolean"
                        iOS="False"
                        Android="True" />
                </Frame.IsVisible>
                <SearchBar TextColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}"
                           x:Name="searchBar"
                           SearchCommand="{Binding SearchCommand}"
                           Text="{Binding SearchText}"
                           BackgroundColor="{AppThemeBinding Dark={StaticResource CardBackgroundDark}, Light={StaticResource CardBackground}}">
                    <SearchBar.IsVisible>
                        <OnPlatform x:TypeArguments="x:Boolean"
                            iOS="False"
                            Android="True" />
                    </SearchBar.IsVisible>
                </SearchBar>
            </Frame>
            <SearchBar TextColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}"
                       x:Name="searchBarIos"
                       SearchCommand="{Binding SearchCommand}"
                       Text="{Binding SearchText}"
                       BackgroundColor="{AppThemeBinding Dark={StaticResource WindowBackgroundColorDark}, Light={StaticResource WindowBackgroundColor}}">
                <SearchBar.IsVisible>
                    <OnPlatform x:TypeArguments="x:Boolean"
                        iOS="True"
                        Android="False" />
                </SearchBar.IsVisible>
            </SearchBar>
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
            <RefreshView
                IsRefreshing="{Binding IsRefreshing}"
                Command="{Binding RefreshCommand}"
                Padding="8">
                <CollectionView ItemsSource="{Binding Users}"
                                EmptyView="Keine neuen Freunde"
                                ItemsUpdatingScrollMode="KeepItemsInView"
                                RemainingItemsThreshold="{Binding ItemThreshold}" 
                                RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:UserViewModel">
                            <Grid x:Name="Item"
                                  Padding="0,8,0,0"
                                  BackgroundColor="{AppThemeBinding Dark={StaticResource WindowBackgroundColorDark}, Light={StaticResource WindowBackgroundColor}}">
                                <Frame CornerRadius="10"
                                       HasShadow="False"
                                       BackgroundColor="{AppThemeBinding Dark={StaticResource CardBackgroundDark}, Light={StaticResource CardBackground}}">
                                    <StackLayout Orientation="Horizontal">
                                        <Image HeightRequest="45" WidthRequest="45" Grid.Column="0" Grid.Row="0" Source="{Binding ProfileImage}" />
                                        <StackLayout VerticalOptions="Center">
                                            <Label Padding="10,0,0,0" Style="{StaticResource BaseLabel}" Text="{Binding FullName}" FontAttributes="Bold" />
                                            <Label Padding="10,0,0,0" Style="{StaticResource TagLabel}" Text="{Binding CountOfCommonFriends, StringFormat='{0} gemeinsame Freunde'}" FontSize="Small"/>
                                            <Label Padding="10,0,0,0" Style="{StaticResource BaseLabel}" Text="Freundschaft anfragen" IsVisible="{Binding NotRequestedForFriendship}">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer
                                                        Command="{Binding BindingContext.SendFriendshipRequestCommand, Source={x:Reference Name=page}}"
                                                        CommandParameter="{Binding Source={x:Reference Item}, Path=BindingContext}"/>
                                                </Label.GestureRecognizers>
                                            </Label>
                                            <Label Padding="10,0,0,0" Style="{StaticResource BaseLabel}" Text="Freundschaftsanfrage löschen" IsVisible="{Binding RequestedForFriendship}">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer
                                                        Command="{Binding BindingContext.RemoveFriendshipRequestCommand, Source={x:Reference Name=page}}"
                                                        CommandParameter="{Binding Source={x:Reference Item}, Path=BindingContext}"/>
                                                </Label.GestureRecognizers>
                                            </Label>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>