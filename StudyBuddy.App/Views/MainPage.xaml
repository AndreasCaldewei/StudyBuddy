<?xml version="1.0" encoding="UTF-8"?>

<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:StudyBuddy.App.Views"
       xmlns:viewmodels="clr-namespace:StudyBuddy.App.ViewModels"
       x:DataType="viewmodels:ChallengesViewModel"
       xmlns:fontAwesome="clr-namespace:StudyBuddy.App"
       x:Class="StudyBuddy.App.Views.MainPage"
       xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
       BackgroundColor="{AppThemeBinding Dark={StaticResource WindowBackgroundColorDark}, Light={StaticResource WindowBackgroundColor}}">
    <Shell.Resources>
        <ResourceDictionary>
            <Style ApplyToDerivedTypes="True" TargetType="Shell">
                <Setter Property="Shell.TitleColor"
                        Value="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}" />
                <Setter Property="Shell.TabBarUnselectedColor"
                        Value="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}" />
                <Setter Property="Shell.TabBarTitleColor"
                        Value="{AppThemeBinding Dark={StaticResource SystemBlueDark}, Light={StaticResource SystemBlueDark}}" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

       
    <ShellItem Route="LoginPage" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" />
    </ShellItem>
    <ShellItem Route="ChallengeDetailsPage" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate local:ChallengeDetailsPage}" />
    </ShellItem>
    <TabBar>
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:ChallengesPage}" Route="ChallengesPage"/>
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesomeSolid}"
                                 Glyph="{x:Static fontAwesome:FontAwesomeIcons.Table}"/>
            </Tab.Icon>
        </Tab>
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:StatisticPage}" Route="StatisticsPage" />
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesomeSolid}"
                                 Glyph="{x:Static fontAwesome:FontAwesomeIcons.Crown}" />
            </Tab.Icon>
        </Tab>
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:FriendsPage}" Route="FriendsPage" />
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesomeSolid}"
                                 Glyph="{x:Static fontAwesome:FontAwesomeIcons.UserFriends}" />
            </Tab.Icon>
        </Tab>
        <Tab>
            <ShellContent Shell.NavBarIsVisible="False" Shell.TabBarIsVisible="True" ContentTemplate="{DataTemplate local:NotificationsPage}" Route="NotificationPage" />
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesomeSolid}"
                                 Glyph="{x:Static fontAwesome:FontAwesomeIcons.Bell}" />
            </Tab.Icon>
        </Tab>
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" Route="SettingsPage" />
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesomeSolid}"
                                 Glyph="{x:Static fontAwesome:FontAwesomeIcons.Gears}" />
            </Tab.Icon>
        </Tab>
    </TabBar>
</Shell>