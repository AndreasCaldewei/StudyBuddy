@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> Localizer
@{
    ViewData["Title"] = @Localizer["Badges"];
}
@using System.Collections.Generic
@using StudyBuddy.Model
@model IEnumerable<GameBadge>

<form method="get" asp-controller="GameBadge" asp-action="New">
  <input class="btn btn-primary" type="submit" value="@Localizer["New badge"]">
</form>

<br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">@Localizer["Name"]</th>
      <th scope="col">@Localizer["Action"]</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var obj in @Model)
    {
        <tr>
            <td>@obj.Name</td>
            <td>
                <a href="/GameBadge/Edit/@obj.ID">@Localizer["Edit"]</a>&nbsp;|
                <a href="/GameBadge/ManageChallenges/@obj.ID">@Localizer["Challenges"]</a>&nbsp;|
                <a href="/GameBadge/Delete/@obj.ID">@Localizer["Delete"]</a>
            </td>
        </tr>
    }
  </tbody>
</table>