@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> Localizer
@{
    ViewData["Title"] = "Challenges";
}
@using System.Collections.Generic
@using StudyBuddy.Model
@model IEnumerable<Challenge>

<form method="get" asp-controller="Challenge" asp-action="New">
  <input class="btn btn-primary" type="submit" value="@Localizer["New Challenge"]">
</form>

<br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">@Localizer["Name"]</th>
      <th scope="col">@Localizer["Category"]</th>
      <th scope="col">@Localizer["Start"]</th>
      <th scope="col">@Localizer["End"]</th>
      <th scope="col">@Localizer["Points"]</th>
      <th scope="col">@Localizer["Action"]</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var obj in @Model)
    {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.Category</td>
            <td>@obj.ValidityStart.ToString("ddd, yyyy-MM-dd")</td>
            <td>@obj.ValidityEnd.ToString("ddd, yyyy-MM-dd")</td>
            <td>@obj.Points</td>
            <td>
                <a href="/Challenge/Edit/@obj.ID">@Localizer["Edit"]</a>&nbsp;|
                @if (@obj.SeriesParentID == null) {
                <a href="/Challenge/Clone/@obj.ID">@Localizer["Clone as series"]</a>@:&nbsp;|
                }
                <a href="/Challenge/Delete/@obj.ID">@Localizer["Delete"]</a>
            </td>
        </tr>
    }
  </tbody>
</table>