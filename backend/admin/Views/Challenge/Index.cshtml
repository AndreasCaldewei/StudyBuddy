@{
    ViewData["Title"] = "Challenges";
}
@using System.Collections.Generic
@using StudyBuddy.Model
@model IEnumerable<Challenge>

<form method="get" asp-controller="Challenge" asp-action="New">
  <input class="btn btn-primary" type="submit" value="New Challenge">
</form>

<br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Date</th>
      <th scope="col">Points</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var obj in @Model)
    {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.Category</td>
            <td>@obj.TargetDate.ToString("ddd, yyyy-MM-dd")</td>
            <td>@obj.Points</td>
            <td>
                <a href="/Challenge/Edit/@obj.ID">Edit</a>&nbsp;|
                <a href="/Challenge/Clone/@obj.ID">Clone as series</a>&nbsp;|
                <a href="/Challenge/Delete/@obj.ID">Delete</a>
            </td>
        </tr>
    }
  </tbody>
</table>