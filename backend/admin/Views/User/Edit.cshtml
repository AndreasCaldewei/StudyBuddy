@using StudyBuddy.Model
@model UserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<form method="POST" asp-controller="User" asp-action="Save">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <input type="hidden" name="ID" value="@Model.ID">
  <input type="hidden" name="PasswordHash" value="@Model.PasswordHash">
  <div class="form-group">
    <label for="name">Firstname</label>
    <input type="text" class="form-control" id="firstname" name="Firstname" value="@Model.Firstname">
  </div>
  <div class="form-group">
    <label for="name">Lastname</label>
    <input type="text" class="form-control" id="lastname" name="Lastname" value="@Model.Lastname">
  </div>
  <div class="form-group">
    <label for="name">Nickname</label>
    <input type="text" class="form-control" id="nickname" name="Nickname" value="@Model.Nickname">
  </div>
  <div class="form-group">
    <label for="name">Email</label>
    <input type="text" class="form-control" id="email" name="Email" value="@Model.Email">
  </div>
  <div class="form-group">
    <label for="name">Password</label>
    <input type="password" class="form-control" id="password" name="Password" value="@Model.Password">
  </div>
  <div class="form-group">
    <label for="name">Password repeat</label>
    <input type="password" class="form-control" id="passwordrepeat" name="PasswordRepeat" value="@Model.PasswordRepeat">
  </div>
  <div class="form-group">
      <label for="name">Role</label>
      <select class="custom-select" asp-for="@Model.Role" asp-items="@Model.AllRoles">
        <option>Please select a role</option>
      </select>
  </div>
  <div class="form-group">
      <label for="name">Study Program</label>
      <select class="custom-select" asp-for="@Model.ProgramID" asp-items="@Model.AllPrograms">
        <option>Please select a study program</option>
      </select>
  </div>

  <button type="submit" class="btn btn-primary">Ok</button>
    
</form>