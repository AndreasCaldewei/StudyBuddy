@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> Localizer
@using StudyBuddy.Model
@model Team
@{
    ViewData["Title"] = "Edit Team";
}

<div class="alert alert-primary" role="alert">
  @if (Model.ID == 0) {
    @Localizer["Create new team"]
  } else {
    @Localizer["Edit existing team"]
  }
</div>

<form method="POST" asp-controller="Team" asp-action="Save">
  <div asp-validation-summary="ModelOnly"></div>
  <input type="hidden" name="ID" value="@Model.ID">
  <div class="form-group">
    <label for="name">@Localizer["Name"]</label>
    <input type="text" class="form-control" id="name" name="Name" value="@Model.Name">
  </div>
  <button type="submit" class="btn btn-primary">@Localizer["Ok"]</button>
</form>

