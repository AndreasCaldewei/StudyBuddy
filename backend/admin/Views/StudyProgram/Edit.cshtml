@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> Localizer
@using StudyBuddy.Model
@model StudyProgram
@{
    ViewData["Title"] = "Edit Study Program";
}

<div class="alert alert-primary" role="alert">
  @if (Model.ID == 0) {
    @:Create new Study Program
  } else {
    @:Edit existing Study Program
  }
</div>

<form method="POST" asp-controller="StudyProgram" asp-action="Save">
  <div asp-validation-summary="ModelOnly"></div>
  <input type="hidden" name="ID" value="@Model.ID">
  <div class="form-group">
    <label for="acronym">Acronym</label>
    <input type="text" class="form-control" id="acronym" name="Acronym" value="@Model.Acronym">
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="Name" value="@Model.Name">
  </div>
  <button type="submit" class="btn btn-primary">Ok</button>
</form>